{
  "esversion": 6,
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "devel": false,
  "eqeqeq": true,
  "eqnull": false,
  "freeze": true,
  "funcscope": false,
  "immed": true,
  "indent": 2,
  "latedef": "nofunc",
  "maxdepth": 4,
  "maxerr": 99999, // so that jshint doesn't give up on a file with tons of errors
  "maxlen": 120,
  "maxparams": 4,
  "maxstatements": 35,
  "mocha": true,
  "newcap": true,
  "noarg": true,
  "node": true,
  "noempty": true,
  "nonew": true,
  "quotmark": "single",
  "regexp": true,
  "smarttabs": false,
  "strict": true,
  "trailing": true,
  "undef": true,
  "unused": true
}
